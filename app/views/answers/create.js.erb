<% if @answer.errors.empty? %>
  var $inputFiles = $('#answer_files');

  $('#answer_body').val('');
  $inputFiles.val('');
  $inputFiles.removeAttr("disabled");

  $('form input[type="hidden"]').remove();

  $('.answers').append('<%= j render @answer %>');

<% else %>
  $('.answer-errors').html('<%= render "shared/errors", resource: @answer %>');
<% end %>
